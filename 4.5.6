<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>THE EYE</title>
<style>
  body {
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: #000;
    color: #32CD32;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  nav {
    position: fixed;
    top: 10px;
    right: 10px;
    display: flex;
    gap: 10px;
    z-index: 100;
  }
  nav button {
    background-color: #32CD32;
    border: none;
    padding: 10px 20px;
    color: black;
    font-weight: bold;
    font-size: 1rem;
    border-radius: 5px;
    cursor: pointer;
    user-select: none;
  }
  nav button:focus {
    outline: 2px solid #fff;
  }
  main {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 100px;
    padding-left: 1rem;
    padding-right: 1rem;
  }
  h1.cat-eye {
    font-size: 6rem;
    font-weight: 900;
    letter-spacing: 0.3em;
    user-select: none;
    text-align: center;
    color: #32CD32;
    text-shadow:
      0 0 5px #32CD32,
      0 0 10px #32CD32,
      0 0 20px #32CD32,
      0 0 40px #32CD32;
  }
  form {
    margin-top: 30px;
    width: 100%;
    max-width: 600px;
  }
  input[type="search"] {
    width: 100%;
    padding: 12px 16px;
    font-size: 1.2rem;
    border-radius: 8px;
    border: 2px solid #32CD32;
    outline: none;
    box-sizing: border-box;
  }
  input[type="search"]:focus {
    border-color: #90EE90;
    box-shadow: 0 0 8px #90EE90;
  }
  /* Games Section */
  #games-section {
    display: none;
    flex-direction: column;
    align-items: center;
    padding-top: 60px;
    width: 100%;
  }
  #games-section h2 {
    font-size: 3rem;
    margin-bottom: 40px;
    color: #32CD32;
    user-select: none;
  }
  .game-buttons {
    display: flex;
    flex-direction: column;
    gap: 15px;
    width: 300px;
  }
  .game-buttons a {
    background-color: #32CD32;
    color: black;
    font-weight: bold;
    font-size: 1.1rem;
    padding: 12px 16px;
    border-radius: 6px;
    text-align: center;
    text-decoration: none;
    user-select: none;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }
  .game-buttons a:hover,
  .game-buttons a:focus {
    background-color: #90EE90;
    outline: none;
  }
</style>
</head>
<body>
<nav>
  <button id="home-btn" type="button" aria-label="Home">HOME</button>
  <button id="games-btn" type="button" aria-label="Games">GAMES</button>
</nav>
<main>
  <!-- Home Section -->
  <section id="home-section">
    <h1 class="cat-eye">THE EYE</h1>
    <form id="search-form" role="search" aria-label="Search form">
      <input
        type="search"
        id="search-input"
        name="search"
        placeholder="Search..."
        autocomplete="off"
        required
        aria-required="true"
      />
    </form>
  </section>

  <!-- Games Section -->
  <section id="games-section" aria-label="Games Section">
    <h2>GAMES</h2>
    <div class="game-buttons">
      <a href="https://example.com/game1" target="_blank" rel="noopener noreferrer">Game 1</a>
      <a href="https://example.com/game2" target="_blank" rel="noopener noreferrer">Game 2</a>
      <a href="https://example.com/game3" target="_blank" rel="noopener noreferrer">Game 3</a>
      <a href="https://example.com/game4" target="_blank" rel="noopener noreferrer">Game 4</a>
      <a href="https://example.com/game5" target="_blank" rel="noopener noreferrer">Game 5</a>
    </div>
  </section>
</main>

<script>
  (function () {
    const homeBtn = document.getElementById("home-btn");
    const gamesBtn = document.getElementById("games-btn");
    const homeSection = document.getElementById("home-section");
    const gamesSection = document.getElementById("games-section");
    const searchForm = document.getElementById("search-form");
    const searchInput = document.getElementById("search-input");

    // Show home, hide games
    function showHome() {
      homeSection.style.display = "flex";
      homeSection.style.flexDirection = "column";
      gamesSection.style.display = "none";
      searchInput.focus();
    }

    // Show games, hide home
    function showGames() {
      homeSection.style.display = "none";
      gamesSection.style.display = "flex";
      gamesSection.style.flexDirection = "column";
      // Focus first game link for accessibility
      const firstGameLink = gamesSection.querySelector("a");
      if (firstGameLink) firstGameLink.focus();
    }

    homeBtn.addEventListener("click", (e) => {
      e.preventDefault();
      showHome();
    });

    gamesBtn.addEventListener("click", (e) => {
      e.preventDefault();
      showGames();
    });

    searchForm.addEventListener("submit", function (e) {
      e.preventDefault();
      const query = searchInput.value.trim();
      if (!query) return;
      const baseUrl = "https://108.181.11.39/?ko=s&__cpo=aHR0cHM6Ly9zdGFydC5kdWNrZHVja2dvLmNvbQ";
      const searchUrl = `${baseUrl}&q=${encodeURIComponent(query)}`;
      window.open(searchUrl, "_blank");
    });

    // Initialize with home view
    showHome();
  })();
</script>
</body>
</html>
